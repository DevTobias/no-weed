generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["filterJson"]

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Plant {
  id       String   @id @default(uuid())
  name     String   @unique
  lightVals LightVal[]
  humidityVals HumidityVal[]
  fluidsVals  FluidsVal[]
  tempVals  TempVal[]
}

model TempVal {
  id       String   @id @default(uuid())
  plant    Plant?   @relation(fields: [plantid], references: [id])
  plantid  String?
  val      String
  date     DateTime
}

model LightVal {
  id       String   @id @default(uuid())
  plant    Plant?   @relation(fields: [plantid], references: [id])
  plantid  String?
  val      String
  date     DateTime
}

model HumidityVal {
  id       String   @id @default(uuid())
  plant    Plant?   @relation(fields: [plantid], references: [id])
  plantid  String?
  val      String
  date     DateTime
}

model FluidsVal {
  id       String   @id @default(uuid())
  plant    Plant?   @relation(fields: [plantid], references: [id])
  plantid  String?
  val      String
  date     DateTime  
}